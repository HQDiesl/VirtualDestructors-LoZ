/// Initial key states
up = false;
down = false;
left = false;
right = false;
select = false;
start = false;
button_a = false;
button_b = false;
start = false;

/// Key bindings
up = keyboard_check(vk_up);
down = keyboard_check(vk_down);
left = keyboard_check(vk_left);
right = keyboard_check(vk_right);
select = keyboard_check_pressed(vk_control);
button_a = keyboard_check_pressed(ord('D'));
button_b = keyboard_check_pressed(ord('F'));
start = keyboard_check_pressed(vk_enter);
